
<AdminRemoveStudentView>:
    name: 'admin_remove_student_view'
    BoxLayout:
        orientation: 'vertical'
        padding: [dp(20), dp(60), dp(20), dp(20)]
        spacing: 10

        canvas.before:
            Color:
                rgba: (0.710, 0.471, 0.812, 1)
            Rectangle:
                pos: self.pos
                size: self.size

        # Label:
        #     text: 'Remove Students'
        #     font_size: '24sp'
        #     color: 1, 1, 1, 1
        #     size_hint: 1, 0.05
        #     bold: True
        #     font_name: 'utils/font/GalanoGrotesqueAltBold.ttf'

        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, None
            padding: [dp(40), 0, 0, dp(10)]
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            Label:
                text: 'Remove Students'
                font_size: '24sp'
                halign: 'center'
                valign: 'center'
                color: 1, 1, 1, 1
                bold: True
                size_hint_x: None
                width: self.texture_size[0]

            Widget:
                width: dp(10)

            MDIconButton:
                icon: 'home'
                icon_size: '35sp'
                pos_hint: {'center_y': 0.5, 'center_x': 0.5}
                size_hint: None, None
                size: dp(40), dp(40)
                theme_text_color: "Custom"
                text_color: 1, 1, 1, 1
                on_release:
                    app.root.transition.direction = 'right'
                    app.root.current = 'admin_dashboard_view'

        BoxLayout:
            orientation: 'vertical'
            size_hint: 1, 0.15
            spacing: 10

            MDTextField:
                id: search_box
                mode: "round"
                hint_text: 'Search for students...'
                on_text: root.search_student_keyword(self.text)
                background_color: 1, 1, 1, 1
                foreground_color: 0, 0, 0, 1
                hint_text_color: 0.5, 0.5, 0.5, 1
                # size_hint_x: 0.8
                font_name: 'utils/font/GalanoGrotesqueAltMedium.ttf'

            RecycleView:
                id: results_view
                viewclass: 'SelectableStudent'
                size_hint: 1, None
                height: 0
                font_name: 'utils/font/GalanoGrotesqueAltMedium.ttf'
                RecycleBoxLayout:
                    default_size: None, dp(40)
                    default_size_hint: 1, None
                    size_hint_y: None
                    height: self.minimum_height
                    orientation: 'vertical'
                    padding: [0, dp(20)]
                    BoxLayout:
                        size_hint_y: None
                        height: self.minimum_height
                        orientation: 'vertical'
                        padding: [0, dp(20)]
                        pos_hint: {"center_x": 0.5}

        Widget:
            size_hint: 1, None
            height: dp(1)
            spacing: 10
            canvas:
                Color:
                    rgba: 1, 1, 1, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

        BoxLayout:
            orientation: 'vertical'
            size_hint: 1, 0.1
            spacing: 10

            MDTextField:
                id: student_email_box
                mode: "round"
                hint_text: 'Email of student you wish to remove...'
                background_color: 1, 1, 1, 1
                foreground_color: 0, 0, 0, 1
                hint_text_color: 0.5, 0.5, 0.5, 1
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                font_name: 'utils/font/GalanoGrotesqueAltMedium.ttf'

            MDFillRoundFlatButton:
                text: 'Remove'
                background_normal: ''
                background_color: 1, 1, 1, 1
                color: 0, 0, 0, 1
                on_release:
                    root.remove_student(student_email_box.text)
                font_size: '19sp'
                size_hint_x: None
                md_bg_color: 0.6667, 0.4196, 0.7765, 1
                line_color: 1,1,1,1
                text_color: 1,1,1,1
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                font_name: 'utils/font/GalanoGrotesqueAltMedium.ttf'

        Widget:
            size_hint: 1, 0.5
            height: dp(1)
            canvas:
                Color:
                    rgba: (0.710, 0.471, 0.812, 1)
                Rectangle:
                    pos: self.pos
                    size: self.size

        MDRaisedButton:
            text: '‚Üê Go to dashboard'
            size_hint_x: 1
            background_normal: ''
            background_color: 1, 1, 1, 1
            color: 0, 0, 0, 1
            size_hint_y: None
            height: dp(40)
            md_bg_color: 0.6667, 0.4196, 0.7765, 1
            font_size: '19sp'
            md_bg_color: 0.6667, 0.4196, 0.7765, 1
            font_name: 'utils/font/GalanoGrotesqueAltMedium.ttf'
            on_release:
                app.root.transition.direction = 'right'
                app.root.current = 'admin_dashboard_view'

<SelectableStudent@Label>:
    stu_id: None
    text: ''
    color: 1, 1, 1, 1
    font_size: '13sp'
    font_name: 'utils/font/GalanoGrotesqueAltMedium.ttf'
    on_touch_down:
        root.parent.parent.parent.parent.parent.select_student(self.stu_id, self.text) if self.collide_point(*args[1].pos) else None
        root.parent.parent.parent.parent.parent.update_recycleview_height(None)
