        BoxLayout:
            orientation: "vertical"
            size_hint: 1, 0.6

            MDTextField:
                id: homework_text
                text: ''
                mode: "fill"
                multiline: True
                background_color: 1, 1, 1, 1
                foreground_color: 0, 0, 0, 1
                size_hint_y: 1
                font_name: 'utils/font/GalanoGrotesqueAltMedium.ttf'

        BoxLayout:
