<AdminHomeworkView>:
    name: 'admin_homework_view'
    BoxLayout:
        orientation: 'vertical'
        padding: [dp(20), dp(60), dp(20), dp(20)]
        spacing: 5

        canvas.before:
            Color:
                rgba: (0.710, 0.471, 0.812, 1)
            Rectangle:
                pos: self.pos
                size: self.size

        BoxLayout:
            orientation: 'vertical'
            size_hint: 1, 0.15
            spacing: 5
            Label:
                id: student_name
                text: ''
                font_size: '24sp'
                bold: True
                size_hint_x: 1
                font_name: 'utils/font/GalanoGrotesqueAltBold.ttf'

            Label:
                id: homework_header
                text: ''
                font_size: '24sp'
                font_name: 'utils/font/GalanoGrotesqueAltMedium.ttf'
                color: 0,255,0,1

