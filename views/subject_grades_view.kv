
<SubjectGradesView>:
    name: 'subject_grades_view'
    BoxLayout:
        orientation: 'vertical'
        padding: [dp(20), dp(50), dp(20), dp(20)]
        spacing: 10

        canvas.before:
            Color:
                rgba: (0.710, 0.471, 0.812, 1)
            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            text: 'View Grades'
            font_size: '22sp'
            color: 1, 1, 1, 1
            size_hint: 1, 0.1
            bold: True
            font_name: 'utils/font/GalanoGrotesqueAltBold.ttf'

        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, 0.1

            Label:
                id: subject_label
                text: ''
                font_size: '19sp'
                color: 1, 1, 1, 1
                # size_hint: 0.7, 1
                text_size: self.width, None
                height: self.texture_size[1]
                halign: 'center'
                valign: 'middle'
                font_name: 'utils/font/GalanoGrotesqueAltMedium.ttf'

        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, 0.1
            Label:
                text: 'Date'
                bold: True
                color: 1, 1, 1, 1
                font_name: 'utils/font/GalanoGrotesqueAltMedium.ttf'
            Label:
                text: 'Exam Type'
                bold: True
                color: 1, 1, 1, 1
                font_name: 'utils/font/GalanoGrotesqueAltMedium.ttf'
            Label:
                text: 'Grade'
                bold: True
                color: 1, 1, 1, 1
                font_name: 'utils/font/GalanoGrotesqueAltMedium.ttf'

        ScrollView:
            GridLayout:
                id: grades_grid
                cols: 3
                spacing: 10
                size_hint_y: None
                height: self.minimum_height
                row_default_height: dp(40)
                row_force_default: True
                font_name: 'utils/font/GalanoGrotesqueAltMedium.ttf'

        MDRaisedButton:
            text: '‚Üê Go Back'
            size_hint: 1, None
            height: dp(40)
            background_normal: ''
            background_color: 1, 1, 1, 1
            color: 0, 0, 0, 1
            md_bg_color: 0.6667, 0.4196, 0.7765, 1
            font_size: '19sp'
            font_name: 'utils/font/GalanoGrotesqueAltMedium.ttf'
            on_release:
                app.root.transition.direction = 'right'
                app.root.current = 'student_grades_view'
