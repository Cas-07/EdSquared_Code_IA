
<AdminFeedbackView>:
    name: 'admin_feedback_view'
    BoxLayout:
        orientation: 'vertical'
        padding: [dp(20), dp(60), dp(20), dp(20)]
        spacing: 10

        canvas.before:
            Color:
                rgba: (0.710, 0.471, 0.812, 1)
            Rectangle:
                pos: self.pos
                size: self.size

        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, None
            # padding: [20, 0, 0, 0]
            Label:
                id: student_name
                text: ''
                font_size: '20sp'
                color: 1, 1, 1, 1
                font_name: 'utils/font/GalanoGrotesqueAltBold.ttf'

        # BoxLayout:
        #     orientation: 'horizontal'
