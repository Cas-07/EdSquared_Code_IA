<ContactUsView>:
    name: 'contact_us_view'
    BoxLayout:
        orientation: 'vertical'
        padding: [dp(20), dp(50), dp(20), dp(20)]
        spacing: 10

        canvas.before:
            Color:
                rgba: (0.710, 0.471, 0.812, 1)
            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            text: 'Contact Us'
            font_size: '24sp'
            color: 1, 1, 1, 1
            size_hint: 1, 0.1
            bold: True

        BoxLayout:
            orientation: 'vertical'
            size_hint: 1, 0.2
            Label:
                text: 'For any feedback and help, please contact us at [ref=email][color=#2e2eb3][u]contact.edsquared@gmail.com[/u][/color][/ref]'
                bold: True
                markup: True
                color: 1, 1, 1, 1
                size_hint_x: 1
                text_size: self.width, None
                height: self.texture_size[1]
                halign: 'center'
                valign: 'middle'
                font_size: '22sp'
                on_ref_press: root.open_email()

            Label:
                text: 'To learn more about the app and how to use it, please refer to this [ref=website][color=#2e2eb3][u]support page.[/u][/color][/ref]'
                bold: True
                markup: True
                color: 1, 1, 1, 1
                size_hint_x: 1
                text_size: self.width, None
                height: self.texture_size[1]
                halign: 'center'
                valign: 'middle'
                font_size: '22sp'
                on_ref_press: root.open_support_page()

        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, 0.1
            padding: [0, 10, 0, 0]

            MDRaisedButton:
                text: 'Go Back'
                background_normal: ''
                background_color: 1, 1, 1, 1
                color: 0, 0, 0, 1
                height: dp(40)
                size_hint: 1, None
                md_bg_color: 0.6667, 0.4196, 0.7765, 1
                font_size: '19sp'
                on_release:
                    app.root.transition.direction = 'right'
                    app.root.current = 'login_view'
